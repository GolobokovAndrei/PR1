<Window x:Class="PR1.Task4Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Задача 4" Height="400" Width="600">
    <Grid>
        <TextBlock Text="Введите массив чисел через пробел" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0"/>
        <TextBox x:Name="ArrayInput" HorizontalAlignment="Center" VerticalAlignment="Top" Width="400" Margin="0,40,0,0"/>
        <TextBlock Text="Введите длину m (начала)" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,80,0,0"/>
        <TextBox x:Name="MInput" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Margin="0,110,0,0"/>
        <Button Content="Переставить" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Margin="0,150,0,0" Click="SwapParts_Click"/>
        <TextBlock x:Name="ResultText" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,200,0,0"/>
    </Grid>
</Window>