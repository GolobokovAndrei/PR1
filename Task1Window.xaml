<Window x:Class="PR1.Task1Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Задача 1" Height="300" Width="400">
    <Grid>
        <TextBlock Text="Введите двоичное число:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0"/>
        <TextBox Name="BinaryInput" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200" Margin="10,40,0,0"/>

        <Button Name="CalculateButton" Content="Проверить делимость на 15" Width="200" Height="40" 
                VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,80,0,0" Click="CalculateButton_Click"/>

        <TextBlock Name="ResultText" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,140,0,0" FontSize="16"/>
    </Grid>
</Window>